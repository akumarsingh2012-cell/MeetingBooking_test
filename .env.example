# ─── Server ───────────────────────────────────────────────────────────────
PORT=3000

# ─── Auth ─────────────────────────────────────────────────────────────────
JWT_SECRET=change_this_to_a_long_random_secret_here
JWT_EXPIRES_IN=8h

# ─── CORS ─────────────────────────────────────────────────────────────────
CORS_ORIGIN=

# ─── Database ─────────────────────────────────────────────────────────────
DB_PATH=./data/mrb.sqlite

# ─── Admin Seed ───────────────────────────────────────────────────────────
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@company.com
ADMIN_PASSWORD=admin@123

# ─── Email (Nodemailer SMTP) ───────────────────────────────────────────────
# For Gmail: enable 2FA and create an App Password at myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
EMAIL_FROM="SLMG Meeting Room <your-email@gmail.com>"

# ─── App URL (used in emails/QR codes) ────────────────────────────────────
APP_URL=http://localhost:3000

# ─── Meeting Reminder (minutes before meeting to send reminder email) ──────
REMINDER_MINUTES=30
